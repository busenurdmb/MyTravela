                    Designed By <a class="text-white" href="https://htmlcodex.com">HTML Codex</a> Distributed By <a href="https://themewagon.com">ThemeWagon</a>
                </div>
            </div>
        </div>
    </div>
  
    <!-- Copyright End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary btn-primary-outline-0 btn-md-square back-to-top"><i class="fa fa-arrow-up"></i></a>
   

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/travela-1.0.0/lib/easing/easing.min.js"></script>
    <script src="~/travela-1.0.0/lib/waypoints/waypoints.min.js"></script>
    <script src="~/travela-1.0.0/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/travela-1.0.0/lib/lightbox/js/lightbox.min.js"></script>

 
    <!-- Template Javascript -->
    <script src="~/travela-1.0.0/js/main.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Mevcut URL'yi alın
            var currentUrl = window.location.pathname;

            // Tüm nav-link öğelerini seçin
            var navLinks = document.querySelectorAll('.navbar-nav .nav-link');

            // Her nav-link öğesini kontrol edin
            navLinks.forEach(function (link) {
                if (link.getAttribute('href') === currentUrl) {
                    // 'active' sınıfını ekleyin
                    link.classList.add('active');
                } else {
                    // Diğer nav-link öğelerinden 'active' sınıfını kaldırın
                    link.classList.remove('active');
                }
            });
        });
    </script>

</body>

</html>
