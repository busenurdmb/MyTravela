
@model List<ResultContactDto>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>İletişim</h2>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12 mb-4">
                <!-- Simple Tables -->
                <div class="card">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary"> İletişim Tablosu</h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>#</th>
                                    <th>İsim</th>
                                    <th>Email</th>
                                    <th>Konu</th>
                                    <th>Mesaj</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Message</td>
                                      


                                        <td>
                                            <a href="/Admin/Contact/Delete/@item.ContactId" class="btn btn-danger">
                                                <span class="icon text-white-50">
                                                    <i class="fa fa-trash"></i>
                                                </span>
                                                <span class="text">Sil </span>
                                            </a>
                                        </td>

                                        <td>

                                            <a href="/Admin/Contact/UpdateContact/@item.ContactId" class="btn btn-success ">
                                                <span class="icon text-white-50">
                                                    <i class="fa fa-edit"></i>
                                                </span>
                                                <span class="text">Düzenle</span>
                                            </a>

                                        </td>

                                    </tr>
                                }


                            </tbody>
                        </table>


                    </div>

                </div>

            </div>
           
        </div>

    </div>
</div>

